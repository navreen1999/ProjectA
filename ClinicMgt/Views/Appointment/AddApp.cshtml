<h1>Add Appointment</h1>

<hr />
<div class="container">

    <form asp-action="AddApp" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*@if (@ViewBag.IfPageLoad != true)
            {
                <div>
                    @ViewBag.Message
                </div>
            }*@

        <div class="form-group">
            <label asp-for="PatientID" class="control-label"></label>
            @Html.EditorFor(m => m.PatientID)
            @*<a asp-controller="Patient" asp-action="IndexPatient"> Click here for Patient List</a>*@
            <span asp-validation-for="PatientID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DoctorID" class="control-label"></label>
            @Html.DropDownList("DoctorID", new SelectList(@ViewBag.did, "DoctorID"), new { @class = "form-control" })
            <span asp-validation-for="DoctorID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Specialization" class="control-label"></label>
            @Html.TextBox("Specialization", TempData["spec"])
            <span asp-validation-for="Specialization" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DoctorFirstName" class="control-label"></label>
            @Html.DropDownList("DoctorFirstName", new SelectList(@ViewBag.fname, "DoctorFirstName"), new { @class = "form-control" })
            <span asp-validation-for="DoctorFirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DoctorLastName" class="control-label"></label>
            @Html.DropDownList("DoctorLastName", new SelectList(@ViewBag.lname, "DoctorLastName"), new { @class = "form-control" })
            <span asp-validation-for="DoctorLastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AppointmentTime" class="control-label"></label>
            @Html.DropDownList("AppointmentTime", new List<SelectListItem
           >
            {
         new SelectListItem{Value="06:00 PM",Text="06:00 PM"},
          new SelectListItem{Value="07:00PM",Text="07:00PM"},
           new SelectListItem{Value="08:00PM",Text="08:00PM"},
            new SelectListItem{Value="09:00 PM",Text="09:00 PM"},

      }, "AppointmentTime", new { @class = "form-control" })
            <span asp-validation-for="AppointmentTime" class="text-danger">Each slot is for 1 hour</span>
        </div>
        <div>
            <label asp-for="AppointmentDate" class="control-label"></label>
            @Html.EditorFor(m => m.AppointmentDate)
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Appointment" asp-action="AppSave" class="btn btn-primary" />
        </div>
    </form>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

