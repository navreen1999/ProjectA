@model ClinicMgt.Models.Appointment

@{
    ViewData["Title"] = "Specialization";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<nav class=" my-nav navbar navbar-light navbar-expand-lg ">


    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Doctor" asp-action="Indexes">Home</a>
            </li>
            <li>
                <a class="nav-link" asp-action="IndexApp">View Appointments</a>
            </li>
            <li>
                <a class="nav-link" asp-controller="Patient" asp-action="IndexPatient">View Patient List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " asp-controller="Login" asp-action="Login">Log-out</a>
            </li>

        </ul>
    </div>

</nav>
<h1>Choose specialization here......</h1>


<div class="container">

    <form asp-action="Specialization" method="post">

        <div class="form-group">
            <label asp-for="Specialization" class="control-label"></label>
            @Html.DropDownList("Specialization", new List<SelectListItem>
       {
         new SelectListItem{Value="Orthopaedics",Text="Orthopaedics"},
          new SelectListItem{Value="Paediatrician",Text="Paediatrician"},
           new SelectListItem{Value="Oncologist",Text="Oncologist"},
            new SelectListItem{Value="Surgeon",Text="Surgeon"},

      }, "Specialization", new { @class = "form-control" })
            <span asp-validation-for="Specialization" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Proceed" asp-action="AddApp" class="btn btn-primary" />
        </div>
    </form>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .my-nav {
        position: absolute;
        z-index: 10;
        width: 100%;
    }

    .preview {
        padding: 10px;
        position: relative;
    }

    .
    .form-group {
        width: 250px;
        margin: 10px auto;
    }

    .form-group input {
        transition: 0.3s linear;
    }

        .form-group input:focus {
            border: 1px solid crimson;
            box-shadow: 0 0 0 0;
        }


    div {
        font-family: 'Times New Roman', Times, serif;
        color: lightcoral;
    }
</style>