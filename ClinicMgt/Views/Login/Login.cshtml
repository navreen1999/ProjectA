@model ClinicMgt.Models.User

@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

<h1>Login Here</h1>



<div class="row">
    <div class="col-sm-4 text-center abc">
        <form asp-action="Login">
            <p class="h4 mb-4 text-left">Login Here!</p>


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label for="UserName" class="in">Username</label>
            @Html.EditorFor(m => m.Username)
            @Html.ValidationMessageFor(m => m.Username)

            <!-- Password -->
            <label for="Password" class="in">Password</label>
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)


            <button class="btn btn-info btn-block " type="submit" style="background-image: url(https://i.imgur.com/6YuRxJA.png)">LOGIN</button>
        </form>
        @ViewBag.Message
    </div>
    <div class="col-sm-8 xyz text-center" style="background-image: url(https://i.imgur.com/6YuRxJA.png)">
        <i class="fa fa-user-circle fa-5x" aria-hidden="true"></i>
        <h2 class="account-text">Welcome to City Medical Center</h2>
    </div>


</div>

<style>
    .row {
        margin-top: 5%;
        margin-left: 2%;
        margin-right: 2%
    }

    .page {
        margin-top: 0%
    }

    .btn {
        border-radius: 25px;
        width: 80%;
        margin-top: 2%
    }

    form {
        padding: 0;
        margin-left: 15%
    }

    .abc {
        background-color: aquamarine;
        padding: 2%;
        margin: auto
    }

    .form-control {
        width: 80%;
        border-radius: 25px
    }

    .fa {
        color: white;
        margin-top: 5%
    }

    .in {
        color: #495057;
        margin-right: 100%
    }

    .in2 {
        color: #495057;
        margin-right: auto
    }


    .custom-control {
        margin-bottom: 2%
    }

    h2.account-text {
        text-align: center;
        color: #fff !important;
        font-weight: 200
    }

    .xyz {
        background-color: gray;
        padding: 2%
    }
</style>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
